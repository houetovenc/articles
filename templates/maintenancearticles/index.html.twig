{% extends 'base.html.twig' %}

{% block title %}Hello MaintenancearticlesController!{% endblock %}

{% block body %}
<h1>pneumatique</h1>

<div class="container mt-5 mb-5 pt-3 pb-3 bg-white" style="border:5px solid black; border-radius:10px; box-shadow:2px 2px 5px black;">

    <h1>Pneus neuf</h1>


    <div class="row" style="justify-content: space-around;">


        {% for article in articles %}

        <div class="card" style="width: 18rem ; -webkit-text-stroke-width: thin; height: 25em; margin-bottom: 45px; align-items: center;">
            <img src="{{ asset('uploads/' ~ article.path) }}" class="card-img-top" alt="..." style="width:150px; height:150px">
            <div class="card-body" style="text-align: center;">
            <h5 class="card-title">{{ article.name }}</h5>
            <p class="card-text">{{ article.decription }}</p>
            <p class="card-text">{{ article.price }}€</p>
            <div class="boutons" style=" margin-bottom: 15px;">
            <a href="#" class="btn btn-primary">ajouter au panier</a> 
            <a href="{{ path('articles_show', {'id': article.id}) }}" class="btn btn-primary">voir</a>
            </div>
        <div class="maintenance">
            <a href="{{ path('articles_edit', {'id': article.id}) }}" class="btn btn-primary">modifier</a>
            <a href="{{ path('articles_delete', {'id': article.id}) }}" class="btn btn-primary">supprimer</a>
        </div>

        </div>
    </div>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
</div>


